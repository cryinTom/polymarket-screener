generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bet {
  id          String @unique
  question    String
  description String
}

model PriceHistorySendLog {
  id          Int      @id @default(autoincrement())
  bet_id      String
  question    String
  description String
  created_at  DateTime @default(now())
}
